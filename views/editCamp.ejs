        <% layout('layouts/boilplate') %>
        <h3 class="text-center">Update <%=  element.title%> campground  </h3>
        <div class="row">
            <div class="col-6 offset-3">
                <form method="post" action="/campground/<%= element._id %>?_method=put" novalidate class="form-validated">
                    <div class="mb-3">
                        <label class="form-label" for="title"> Title</label>
                        <input class="form-control" type="text" name="title" id="title" value="<%= element.title %>" required >
                        <div class="valid-feedback">
                            Looks goooood!
                          </div>
                    </div>
                    <div class="mb-3">
                     <label class="form-label" for="location"> Location</label>
                     <input class="form-control" type="text" name="location" id="location" value="<%= element.location %>"  required >
                     <div class="valid-feedback">
                        Looks goooood!
                      </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="image"> Image Url</label>
                        <input class="form-control" type="text" name="image" id="image" value="<%= element.image %>" required>
                        <div class="valid-feedback">
                            Looks goooood!
                          </div>
                       </div>
                       <div class="mb-3">
                        <label class="form-label" for="price"> Price</label>
                        <input class="form-control" type="number" name="price" id="price" min=0 value="<%= element.price %>"  required>
                        <div class="valid-feedback">
                            Looks goooood!
                          </div>
                       </div>
                       <div class="mb-3">
                        <label class="form-label" for="descreption"> Descreption</label>
                        <textarea class="form-control" type="text" name="descreption" id="descreption" required><%= element.descreption %></textarea>
                        <div class="valid-feedback">
                            Looks goooood!
                          </div>
                       </div>
                       
                    <div class="mb-3">
                        <button  class="btn btn-success">Update Campground</button>
                    </div>
                </form>
                <a  href="/campground/<%= element.id%>" class="btn btn-primary">Back To Campground</a>
            </div>
        </div>
        
   
<script>
    (() => {
    'use strict'
  
    // Fetch all the forms we want to apply custom Bootstrap validation styles to
    const forms = document.querySelectorAll('.form-validated')
  
    // Loop over them and prevent submission
    Array.from(forms).forEach(form => {
      form.addEventListener('submit', event => {
        if (!form.checkValidity()) {
          event.preventDefault()
          event.stopPropagation()
        }
  
        form.classList.add('was-validated')
      }, false)
    })
  })()
  </script>
  